<Window x:Class="Superheroes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Superheroes"
        mc:Ignorable="d"
        Title="Superhéroes" Height="700" Width="1000" MinHeight="500" MinWidth="700">

    <Window.Resources>
        <Style TargetType="{x:Type Image}" x:Key="Flecha">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="24"/>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="False" Background="PaleGreen">
        <DockPanel DockPanel.Dock="Top" LastChildFill="False">
            <TextBlock DockPanel.Dock="Left"
                       Text="Ironman"
                       FontSize="30"
                       FontFamily="Comic Sans"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Left">
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect>
            </TextBlock>
            <Image DockPanel.Dock="Right" 
                   Source="xmen.png"
                   Height="50"
                   Width="50"/>
            <Image DockPanel.Dock="Right" 
                   Source="avengers.png"
                   Height="40"
                   Width="40"/>
        </DockPanel>
        <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center">
            <Image Style="{StaticResource Flecha}"
                   x:Name="flechaIzquierda"
                   Source="arrow.png"/>
            <TextBlock Text="1/3"
                       FontSize="20"
                       FontWeight="Bold"/>
            <Image Style="{StaticResource Flecha}"
                   x:Name="flechaDerecha"
                   Source="arrow.png"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="1" ScaleX="-1"/>
                        <SkewTransform AngleY="0" AngleX="0"/>
                        <RotateTransform Angle ="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </WrapPanel>
    </DockPanel>
</Window>
